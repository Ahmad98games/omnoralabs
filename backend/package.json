{
  "name": "luxury-ecommerce-backend",
  "version": "1.0.0",
  "description": "Backend server for luxury women's clothing e-commerce website",
  "main": "server.js",
  "scripts": {
    "cleanup": "node scripts/cleanup-port.js",
    "start": "npm run cleanup && node server.js",
    "server": "npm run cleanup && node server.js",
    "dev": "set NODE_ENV=development && npm run cleanup && node --watch server.js",
    "worker": "node workers/notificationWorker.js",
    "worker:dev": "nodemon workers/notificationWorker.js",
    "lint:env": "node scripts/check-env-leaks.js",
    "test": "jest --verbose --detectOpenHandles",
    "test:boundaries": "node test-boundaries.js",
    "precheck": "node scripts/precheck.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^8.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "file-type": "^16.5.4",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "stripe": "^14.25.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^9.6.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}